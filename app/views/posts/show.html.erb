<div class="container">
  <%= render @post %>
  <div>
    <br>
    <%= link_to "Edit this post", edit_post_path(@post), class: " btn btn-light" %> |
    <%= link_to "Back to posts", posts_path, class: " btn btn-dark" %>
  </div>
  <br>
  <%= button_to "Destroy this post", @post, method: :delete, class: "btn btn-danger" %>
</div>

<div class="container mt-5">
  <%= render 'comments/form',
    post: @post,
    comment: @post.comments.build,
    submit_label: "Reply" %>
  <hr>
  <% @comments.each do |comment| %>
    <%= render 'comments/comment',
    post: @post,
    comment: comment %>
  <% end %>
</div>
